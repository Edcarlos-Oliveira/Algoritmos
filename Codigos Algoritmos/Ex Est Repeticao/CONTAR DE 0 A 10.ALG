algoritmo "Contar de 0 a 10"
var
   contador: Inteiro
inicio
      contador <- 10
      Enquanto (contador >= 0) faca
               Escreval (contador)
               contador <- contador - 1
      FimEnquanto
      Escreval ("Terminei de contar")

fimalgoritmo

// contador <- contador - 1, pode alterar o número 1 para o contador saltar conforme numero escolhido
// Ex: de 2 e 2, 3 e 3 etc..
